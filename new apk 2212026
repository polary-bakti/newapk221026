    <!-- Alert Modal (Custom) -->
    <div id="customAlert" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50 p-4">
        <div class="bg-white rounded-2xl p-6 max-w-sm w-full shadow-2xl">
            <h3 id="alertTitle" class="text-lg font-bold text-gray-900 mb-2">Informasi</h3>
            <p id="alertMessage" class="text-gray-600 mb-6"></p>
            <button onclick="closeAlert()" class="w-full bg-indigo-600 text-white py-2 rounded-xl font-bold">Tutup</button>
        </div>
    </div>

    <script>
        let currentMode = 'ktp';

        function switchMode(mode) {
            currentMode = mode;
            const btnKtp = document.getElementById('btnKtp');
            const btnKk = document.getElementById('btnKk');
            const idLabel = document.getElementById('idLabel');
            const idInput = document.getElementById('idInput');

            if (mode === 'ktp') {
                btnKtp.classList.add('bg-white', 'shadow-sm', 'text-indigo-600');
                btnKtp.classList.remove('text-gray-500');
                btnKk.classList.remove('bg-white', 'shadow-sm', 'text-indigo-600');
                btnKk.classList.add('text-gray-500');
                idLabel.innerText = "Nomor KTP (NIK)";
                idInput.placeholder = "Masukkan 16 digit NIK";
            } else {
                btnKk.classList.add('bg-white', 'shadow-sm', 'text-indigo-600');
                btnKk.classList.remove('text-gray-500');
                btnKtp.classList.remove('bg-white', 'shadow-sm', 'text-indigo-600');
                btnKtp.classList.add('text-gray-500');
                idLabel.innerText = "Nomor Kartu Keluarga (KK)";
                idInput.placeholder = "Masukkan 16 digit nomor KK";
            }
            idInput.value = "";
            document.getElementById('errorMsg').classList.add('hidden');
        }

        function togglePassword() {
            const pwdInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');
            if (pwdInput.type === 'password') {
                pwdInput.type = 'text';
                eyeIcon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                pwdInput.type = 'password';
                eyeIcon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        function showAlert(title, msg) {
            document.getElementById('alertTitle').innerText = title;
            document.getElementById('alertMessage').innerText = msg;
            document.getElementById('customAlert').classList.remove('hidden');
        }

        function closeAlert() {
            document.getElementById('customAlert').classList.add('hidden');
        }

        // Handle Form Submission
        document.getElementById('loginForm').onsubmit = function(e) {
            e.preventDefault();
            const idVal = document.getElementById('idInput').value;
            const errorMsg = document.getElementById('errorMsg');

            if (idVal.length !== 16 || isNaN(idVal)) {
                errorMsg.classList.remove('hidden');
                return false;
            }

            errorMsg.classList.add('hidden');
            showAlert("Berhasil", `Mencoba login dengan ${currentMode.toUpperCase()}: ${idVal}. Mengalihkan ke dashboard...`);
            
            // Simulasi proses
            console.log("Submitting:", {
                type: currentMode,
                id: idVal,
                password: document.getElementById('password').value
            });
        };

        // Input restrict to numbers only
        document.getElementById('idInput').addEventListener('input', function (e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
